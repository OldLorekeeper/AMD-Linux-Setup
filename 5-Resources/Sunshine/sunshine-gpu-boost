#!/bin/zsh

# -------------------
# Configuration
# -------------------

GPU_SYSFS="/sys/class/drm/card1/device/power_dpm_force_performance_level"
LOG_FILE="/tmp/sunshine_gpu_boost.log"

# -------------------
# Logic
# -------------------

if [[ ! -w "$GPU_SYSFS" ]]; then
    echo "Error: Cannot write to $GPU_SYSFS. Check permissions/card ID." >&2
    exit 1
fi

case "$1" in
    start)
        echo "high" > "$GPU_SYSFS"
        echo "[$(date)] GPU set to HIGH performance" >> "$LOG_FILE"
        ;;
    stop)
        echo "auto" > "$GPU_SYSFS"
        echo "[$(date)] GPU set to AUTO performance" >> "$LOG_FILE"
        ;;
    *)
        echo "Usage: $0 {start|stop}"
        exit 1
        ;;
esac
